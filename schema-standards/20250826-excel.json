{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/cornyhorse/forklift/schema-standards/20250826-excel.json",
  "title": "Forklift Excel Row",
  "type": "object",

  "properties": {
    "id":        { "type": "integer" },
    "name":      { "type": "string" },
    "event_date":{ "type": "string", "format": "date" },
    "amount":    { "type": "number" }
  },
  "required": ["id", "name"],
  "additionalProperties": false,

  "x-excel": {
    "valuesOnly": true,          // read computed values, not formulas
    "dateSystem": "1900",        // default; per-sheet override allowed
    "nulls": { "global": ["", "NA", "N/A"] },

    "sheets": [
      {
        "select": { "name": "Sheet1" }   // OR { "index": 0 } OR { "regex": "^Data_\\d{4}$" }
      }
      // ... add more sheet blocks as needed
    ]
  }
}